# TurfPro Secured V2.0 - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# ============================================
# APPLICATION CONFIGURATION
# ============================================

# Environment: development, staging, production
ENVIRONMENT=production

# Server port (Render will set this automatically)
PORT=8080

# ============================================
# SECURITY CONFIGURATION
# ============================================

# Master password for encryption (minimum 32 characters)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
MASTER_PASSWORD=your-very-secure-master-password-here-min-32-chars

# Secret key for Flask sessions
SECRET_KEY=your-flask-secret-key-here

# ============================================
# GOOGLE CLOUD CONFIGURATION
# ============================================

# Google Cloud Project ID
GCP_PROJECT_ID=your-project-id

# Path to service account key (use Secret Manager in production)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# ============================================
# API CREDENTIALS (Encrypted storage required)
# ============================================

# These should be stored encrypted in production
# Use the SecureKeyManager to encrypt before storing

# Equidia API credentials
EQUIDIA_USERNAME=your-equidia-username
EQUIDIA_PASSWORD=encrypted-equidia-password

# PMU API credentials  
PMU_API_KEY=your-pmu-api-key

# Zeturf credentials
ZETURF_USERNAME=your-zeturf-username
ZETURF_PASSWORD=encrypted-zeturf-password

# ============================================
# DATABASE CONFIGURATION (Optional)
# ============================================

# PostgreSQL connection string (if using database)
# DATABASE_URL=postgresql://user:password@host:port/dbname

# ============================================
# LOGGING & MONITORING
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable audit logging
ENABLE_AUDIT_LOG=true

# ============================================
# RENDER SPECIFIC
# ============================================

# Render will automatically set these:
# - PORT
# - RENDER
# - RENDER_SERVICE_NAME
# - RENDER_INSTANCE_ID
